terraform {
  required_version = ">= 1.6.0"

  required_providers {
    aws = {
      source  = "hashicorp/aws"
      version = "~> 5.0"
    }
  }

  backend "s3" {
    bucket = "${s3_state_bucket_name}"
    key    = "terraform.tfstate"
    region = "${aws_region}"
  }
}

provider "aws" {
  region = "${aws_region}"

  default_tags {
    tags = {
      ManagedBy = "terraform"
      Project   = "${repository_name}"
    }
  }
}
